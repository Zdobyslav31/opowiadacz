{% extends "layout.html.twig" %}

{% block title %}{{ 'title.about'|trans }}{% endblock %}

{% block content %}

    <div class="container">
	
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">{{ 'title.about'|trans }}
                        <strong>{{ 'title.website'|trans }}</strong>
                    </h2>
                    <hr>
                </div>
                <div class="col-md-6">
                    <img class="img-responsive img-border-left" src="{{ asset('img/about-image.jpg') }}" alt="">
                </div>
                <div class="col-md-6">
                    {{ text.content|raw }}
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

    </div>
    <!-- /.container -->

{% endblock %}
