{% extends "layout.html.twig" %}

{% block title %}
	{% if role=='admin' %}
		{{ 'title.change_password'|trans({'%name%': user.login}) }}
	{% else %}
		{{ 'title.change_my_password'|trans }}
	{% endif %}
{% endblock %}

{% block content %}

    
	<div class="container">
        <div class="row">
            <div class="box">
				<div class="col-lg-12 text-center">
                    <ul class="pager">
                        <li class="previous">
							{% if role=='admin' %}
								<a href="{{ url('admin') }}">&larr; {{ 'label.back_to_admin'|trans }}</a>
							{% else %}
								<a href="{{ url('profile') }}">&larr; {{ 'label.back_to_profile'|trans }}</a>
							{% endif %}
                        </li>
                    </ul>
					<hr>
                    <h1 class="intro-text text-center">
						{% if role=='admin' %}
							{{ 'title.change_password'|trans({'%name%': user.login}) }}
						{% else %}
							{{ 'title.change_my_password'|trans }}
						{% endif %}
                    </h1>
					<hr>
					{% if role=='admin' %}
						{{ form_start(form, { method: 'post', action: url('change_password', {'id': user.id}) }) }}
						<div class="form-group col-lg-12">
							{{ form_widget(form) }}
						</div>
						<div class="form-group col-lg-12 text-center">
							<input type="submit" class="btn btn-primary" value="{{ 'action.change_password'|trans }}" />
						</div>

						{{ form_end(form) }}
					{% else %}
                        {{ form_start(form, { method: 'post', action: url('change_password_user') }) }}
						<div class="form-group col-lg-12">
                            {{ form_widget(form) }}
						</div>
						<div class="form-group col-lg-12 text-center">
							<input type="submit" class="btn btn-primary" value="{{ 'action.change_password'|trans }}" />
						</div>
					{% endif %}


					</a>
                </div>
			</div>
		</div>
	</div>
	

{% endblock %}